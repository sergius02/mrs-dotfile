		-config ~/.config/rofi/rofidmenu.rasi

bindsym $mod+t exec rofi -show window \
		-config ~/.config/rofi/rofidmenu.rasi

bindsym $mod+p exec \
        ls ~/Arvo/Proyectos | \
        rofi -show -dmenu -i -config ~/.config/rofi/rofidmenu.rasi | \
        xargs -I_ idea ~/Arvo/Proyectos/_

bindsym $mod+Shift+p exec \
        ls ~/Proyectos | \
        rofi -show -dmenu -i -config ~/.config/rofi/rofidmenu.rasi | \
        xargs -I_ idea ~/Proyectos/_

